[config]
# Disable build during deployment for faster deployments
# Build happens via Oryx during pre-deployment phase
SCM_DO_BUILD_DURING_DEPLOYMENT = false

# Use Oryx build system for optimized Python builds
ENABLE_ORYX_BUILD = true

# Python version
PYTHON_VERSION = 3.11

# Django specific settings
DJANGO_SETTINGS_MODULE = azureproject.production

# Skip package installation if requirements haven't changed (faster deployments)
SKIP_PYTHON_DEPLOYMENT_IF_NO_REQUIREMENTS_CHANGE = true

# Skip Node.js build - package.json is only for local Vite development
# JS assets are pre-built and committed to repo
DISABLE_NODEJS_BUILD = true